{
    "css": "styles.css",
    "layout": {
        "max_width_ratio": 0.9,
        "max_number_of_lines": 2,
        "min_number_of_lines": 2,
        "vertical_align": {
            "align": "center"
        }
    },
    "splitters": [
        {
            "type": "split_into_sentences"
        },
        {
            "type": "limit_by_chars",
            "min_chars": 12,
            "max_chars": 18
        }
    ],
    "text_effects": [
        {
            "type": "remove_punctuation_marks",
            "punctuation_marks": ["."],
            "exception_marks": ["..."]
        }
    ]
}