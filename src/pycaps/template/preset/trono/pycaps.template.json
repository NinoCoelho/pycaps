{
    "css": "styles.css",
    "resources": "resources",
    "layout": {
        "max_width_ratio": 0.7,
        "max_number_of_lines": 3,
        "min_number_of_lines": 1,
        "on_text_overflow_strategy": "exceed_width",
        "vertical_align": {
            "align": "center",
            "offset": 0.20
        }
    },
    "splitters": [
        {
            "type": "split_into_sentences"
        },
        {
            "type": "limit_by_chars",
            "min_chars": 15,
            "max_chars": 25
        }
    ],
    "effects": [
        {
            "type": "remove_punctuation_marks",
            "punctuation_marks": ["."],
            "exception_marks": ["..."]
        }
    ]
}
