{
    "css": "styles.css",
    "layout": {
        "y_words_space": 5,
        "max_width_ratio": 0.8,
        "max_number_of_lines": 2,
        "min_number_of_lines": 1,
        "vertical_align": {
            "align": "bottom"
        }
    },
    "splitters": [
        {
            "type": "limit_by_chars",
            "min_chars": 20,
            "max_chars": 40
        }
    ],
    "animations": [
        {
            "type": "fade_in", 
            "when": "narration-starts",
            "what": "segment",
            "duration": 0.3
        },
        {
            "type": "fade_out",
            "when": "narration-ends",
            "what": "segment",
            "duration": 0.3
        }
    ]
}